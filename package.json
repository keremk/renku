{
  "name": "renku-monorepo",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "core",
    "cli",
    "compositions",
    "providers",
    "viewer",
    "web"
  ],
  "scripts": {
    "dev:core": "pnpm --filter @renku/core dev",
    "dev:cli": "pnpm --filter @renku/cli dev",
    "dev:viewer": "pnpm --filter viewer dev",
    "dev:web": "pnpm --filter @renku/web dev",
    "build": "pnpm --filter @renku/core build && pnpm --filter @renku/compositions build && pnpm --filter @renku/providers build && pnpm --filter @renku/cli build && pnpm --filter viewer build",
    "build:core": "pnpm --filter @renku/core build",
    "build:providers": "pnpm --filter @renku/providers build",
    "build:compositions": "pnpm --filter @renku/compositions build",
    "build:cli": "pnpm --filter @renku/cli build",
    "build:viewer": "pnpm --filter viewer build",
    "build:web": "pnpm --filter @renku/web build",
    "deploy:web": "pnpm --filter @renku/web cf-deploy",
    "lint": "pnpm --filter @renku/core lint && pnpm --filter @renku/providers lint && pnpm --filter @renku/cli lint",
    "lint:core": "pnpm --filter @renku/core lint",
    "lint:providers": "pnpm --filter @renku/providers lint",
    "lint:cli": "pnpm --filter @renku/cli lint",
    "type-check": "pnpm --filter @renku/core type-check && pnpm --filter @renku/providers type-check && pnpm --filter @renku/cli type-check",
    "type-check:core": "pnpm --filter @renku/core type-check",
    "type-check:providers": "pnpm --filter @renku/providers type-check",
    "type-check:compositions": "pnpm --filter @renku/compositions type-check",
    "type-check:cli": "pnpm --filter @renku/cli type-check",
    "type-check:web": "pnpm --filter @renku/web type-check",
    "test": "pnpm --filter @renku/core test && pnpm --filter @renku/providers test && pnpm --filter @renku/cli test",
    "test:core": "pnpm --filter @renku/core test",
    "test:providers": "pnpm --filter @renku/providers test",
    "test:cli": "pnpm --filter @renku/cli test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "pnpm lint && pnpm format:check",
    "check": "pnpm type-check",
    "bundle:viewer": "pnpm --filter viewer build && node scripts/prepare-viewer-bundle.mjs",
    "package:cli": "node scripts/package-cli.mjs",
    "bump": "bash scripts/bump-versions.sh",
    "bump:minor": "bash scripts/bump-versions.sh minor",
    "bump:major": "bash scripts/bump-versions.sh major",
    "release": "bash scripts/bump-n-push.sh",
    "release:minor": "bash scripts/bump-n-push.sh minor",
    "release:major": "bash scripts/bump-n-push.sh major",
    "release:ci": "bash scripts/bump-n-push.sh patch --non-interactive"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
