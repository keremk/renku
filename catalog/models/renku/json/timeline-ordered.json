{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "timeline": {
      "type": "object",
      "description": "Timeline composition configuration",
      "properties": {
        "tracks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Image",
              "Audio",
              "Music",
              "Video",
              "Transcription",
              "Text"
            ]
          },
          "default": ["Video", "Audio", "Music"]
        },
        "masterTracks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Image", "Audio", "Music", "Video"]
          },
          "default": ["Audio"],
          "description": "Priority-ordered list of track kinds for segment duration. If primary track is missing a segment, fallback to next."
        },
        "imageClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "ImageSegments"
            },
            "effect": {
              "type": "string",
              "enum": ["KennBurns"],
              "default": "KennBurns"
            }
          },
          "default": {
            "artifact": "ImageSegments",
            "effect": "KennBurns"
          },
          "required": ["artifact"],
          "additionalProperties": true
        },
        "videoClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "VideoSegments"
            },
            "volume": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": 1.0
            }
          },
          "default": {
            "artifact": "VideoSegments"
          },
          "required": ["artifact"],
          "additionalProperties": true
        },
        "audioClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "AudioSegments"
            },
            "volume": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": 1.0
            }
          },
          "default": {
            "artifact": "AudioSegments",
            "volume": 1.0
          },
          "required": ["artifact"],
          "additionalProperties": true
        },
        "musicClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "Music"
            },
            "volume": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": 0.3
            },
            "playStrategy": {
              "type": "string",
              "enum": ["loop", "stopWhenFinished"],
              "default": "loop"
            }
          },
          "default": {
            "artifact": "Music",
            "volume": 0.3,
            "playStrategy": "loop"
          },
          "required": ["artifact"],
          "additionalProperties": true
        },
        "transcriptionClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "TranscriptionAudio"
            }
          },
          "default": {
            "artifact": "TranscriptionAudio"
          },
          "required": ["artifact"],
          "additionalProperties": true
        },
        "textClip": {
          "type": "object",
          "properties": {
            "artifact": {
              "type": "string",
              "default": "TextSegments"
            },
            "effect": {
              "type": "string",
              "enum": [
                "none",
                "fade-in-out",
                "slide-in-out-left",
                "slide-in-out-right",
                "spring-in-out"
              ],
              "default": "fade-in-out"
            }
          },
          "default": {
            "artifact": "TextSegments",
            "effect": "fade-in-out"
          },
          "required": ["artifact"],
          "additionalProperties": true
        }
      },
      "default": {
        "tracks": ["Video", "Audio", "Music"],
        "masterTracks": ["Audio"],
        "videoClip": {
          "artifact": "VideoSegments"
        },
        "audioClip": {
          "artifact": "AudioSegments",
          "volume": 1.0
        },
        "musicClip": {
          "artifact": "Music",
          "volume": 0.3,
          "playStrategy": "loop"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
