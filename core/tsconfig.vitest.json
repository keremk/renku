{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "noEmit": true,
    "rootDir": "..",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./node_modules",
      "../node_modules"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "tests/**/*.ts",
    "../cli/src/lib/config-assets.ts",
    "../cli/src/lib/path.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
