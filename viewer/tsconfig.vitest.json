{
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "noEmit": true,
    "rootDir": "..",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./node_modules",
      "../node_modules"
    ]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server-dist"
  ]
}
