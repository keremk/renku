---
import { getCollection } from 'astro:content';
import LandingLayout from '../../layouts/LandingLayout.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<LandingLayout title="Blog" description="Latest news and updates from the Renku team">
  <section class="landing-section">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Blog</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-12">
        Latest news, tutorials, and updates from the Renku team.
      </p>

      <div class="space-y-8">
        {posts.map((post) => (
          <article class="group">
            <a
              href={`/blog/${post.slug}/`}
              class="block p-6 -m-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors"
            >
              <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 mb-2">
                <time
                  datetime={post.data.pubDate.toISOString()}
                  class="text-sm text-gray-500 dark:text-gray-400"
                >
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags && (
                  <div class="flex gap-2">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs px-2 py-1 rounded-full bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-accent-500 transition-colors mb-2">
                {post.data.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-400">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="text-gray-600 dark:text-gray-400 text-center py-12">
          No blog posts yet. Check back soon!
        </p>
      )}
    </div>
  </section>
</LandingLayout>
