---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { label: 'Documentation', href: '/docs/' },
    { label: 'Blog', href: '/blog/' },
  ],
  community: [
    { label: 'GitHub', href: '#github' },
    { label: 'Discord', href: '#discord' },
  ],
};
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- Logo & Description -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/logo.svg" alt="Renku Logo" class="footer-logo-img" />
          <span class="footer-logo-text">Renku</span>
        </a>
        <p class="footer-description">
          AI-powered movie generation. Create stunning videos with the power of artificial intelligence.
        </p>
        <!-- Social icons in footer brand section -->
        <div class="footer-social">
          <a
            href="#github"
            class="footer-social-link"
            aria-label="GitHub"
          >
            <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
