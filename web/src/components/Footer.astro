---
import IconGitHub from './icons/IconGitHub.astro';
import IconDiscord from './icons/IconDiscord.astro';
import IconHeart from './icons/IconHeart.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { label: 'Documentation', href: '/docs/' },
    { label: 'Blog', href: '/blog/' },
  ],
  community: [
    { label: 'GitHub', href: '#github' },
    { label: 'Discord', href: '#discord' },
  ],
};
---

<footer class="site-footer">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Logo & Description -->
      <div class="col-span-2">
        <a href="/" class="inline-flex items-center gap-3 mb-6 no-underline group">
          <img
            src="/logo.svg"
            alt="Renku Logo"
            class="h-10 w-10 transition-transform duration-200 group-hover:scale-105"
          />
          <span class="text-2xl font-bold" style="color: var(--color-foreground);">Renku</span>
        </a>
        <p class="max-w-xs leading-relaxed mb-6" style="color: var(--color-muted-foreground);">
          AI-powered movie generation. Create stunning videos with the power of artificial intelligence.
        </p>
        <!-- Social icons in footer brand section -->
        <div class="flex items-center gap-3">
          <a
            href="#github"
            class="p-2 rounded-lg transition-colors duration-200 no-underline"
            style="color: var(--color-muted-foreground);"
            aria-label="GitHub"
          >
            <IconGitHub />
          </a>
          <a
            href="#discord"
            class="p-2 rounded-lg transition-colors duration-200 no-underline"
            style="color: var(--color-muted-foreground);"
            aria-label="Discord"
          >
            <IconDiscord />
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold mb-4" style="color: var(--color-foreground);">Product</h3>
        <ul class="list-none p-0 m-0 flex flex-col gap-3">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm transition-colors duration-200 no-underline hover:text-accent-500"
                style="color: var(--color-muted-foreground);"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community Links -->
      <div>
        <h3 class="text-sm font-semibold mb-4" style="color: var(--color-foreground);">Community</h3>
        <ul class="list-none p-0 m-0 flex flex-col gap-3">
          {footerLinks.community.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm transition-colors duration-200 no-underline hover:text-accent-500"
                style="color: var(--color-muted-foreground);"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright & Bottom bar -->
    <div class="mt-12 pt-8 border-t flex flex-col sm:flex-row items-center justify-between gap-4" style="border-color: var(--color-border);">
      <p class="text-sm" style="color: var(--color-muted-foreground);">
        &copy; {currentYear} Renku. All rights reserved.
      </p>
      <div class="flex items-center gap-1 text-sm" style="color: var(--color-muted-foreground);">
        <span>Built with</span>
        <IconHeart class="w-4 h-4" style="color: var(--color-accent-500);" />
        <span>and AI</span>
      </div>
    </div>
  </div>
</footer>
