---
/**
 * CopyPageButton - A floating button to copy page content as markdown for AI tools
 * Positioned in top-right corner of the page content area
 */
interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<div class="absolute top-0 right-0 z-10">
  <button
    class="copy-page-btn inline-flex items-center gap-2 px-3.5 py-2 text-sm font-medium rounded-lg border cursor-pointer transition-all duration-200 hover:-translate-y-px"
    style="color: var(--color-accent-700); background: var(--color-accent-50); border-color: var(--color-accent-200); font-family: var(--font-sans);"
    data-slug={slug}
    aria-label="Copy page content as markdown"
    title="Copy page as markdown for AI"
  >
    <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
      <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
    </svg>
    <span class="btn-label whitespace-nowrap sm:inline hidden">Copy Page</span>
    <span class="btn-feedback text-xs ml-1" style="color: var(--color-accent-600);" aria-live="polite"></span>
  </button>
</div>

<style>
  /* Hover and state styles that need scoped CSS */
  .copy-page-btn:hover {
    background: var(--color-accent-100) !important;
    border-color: var(--color-accent-300) !important;
    box-shadow: 0 2px 8px rgba(180, 130, 50, 0.15);
  }

  :global(.dark) .copy-page-btn {
    color: var(--color-accent-300) !important;
    background: var(--color-accent-950) !important;
    border-color: var(--color-accent-800) !important;
  }

  :global(.dark) .copy-page-btn:hover {
    background: var(--color-accent-900) !important;
    border-color: var(--color-accent-700) !important;
  }

  :global(.dark) .btn-feedback {
    color: var(--color-accent-400);
  }

  /* Success state */
  .copy-page-btn.copied {
    background: var(--color-accent-200) !important;
    border-color: var(--color-accent-400) !important;
  }

  :global(.dark) .copy-page-btn.copied {
    background: var(--color-accent-800) !important;
    border-color: var(--color-accent-600) !important;
  }
</style>

<script>
  function initCopyButtons() {
    document.querySelectorAll('.copy-page-btn').forEach((button) => {
      button.addEventListener('click', async () => {
        const btn = button as HTMLButtonElement;
        const slug = btn.dataset.slug;
        const feedback = btn.querySelector('.btn-feedback') as HTMLSpanElement;
        const label = btn.querySelector('.btn-label') as HTMLSpanElement;

        try {
          // Try to fetch raw markdown from API
          const response = await fetch(`/api/docs/${slug}.md`);

          let markdown: string;
          if (response.ok) {
            markdown = await response.text();
          } else {
            // Fallback: extract text from rendered content
            const content = document.querySelector('.sl-markdown-content');
            if (content) {
              // Get the page title
              const title = document.querySelector('h1')?.textContent || '';
              markdown = `# ${title}\n\n${content.textContent || ''}`;
            } else {
              throw new Error('No content found');
            }
          }

          await navigator.clipboard.writeText(markdown);

          // Show success feedback
          btn.classList.add('copied');
          if (label) label.style.display = 'none';
          if (feedback) feedback.textContent = 'Copied!';

          // Reset after delay
          setTimeout(() => {
            btn.classList.remove('copied');
            if (label) label.style.display = '';
            if (feedback) feedback.textContent = '';
          }, 2000);

        } catch (error) {
          console.error('Failed to copy:', error);
          if (feedback) {
            feedback.textContent = 'Failed';
            setTimeout(() => {
              feedback.textContent = '';
            }, 2000);
          }
        }
      });
    });
  }

  // Initialize on page load
  initCopyButtons();

  // Re-initialize on Astro page transitions (View Transitions)
  document.addEventListener('astro:page-load', initCopyButtons);
</script>
